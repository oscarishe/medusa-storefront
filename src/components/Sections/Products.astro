---
import CategoriesSwitcher from "../CategoriesSwitcher/CategoriesSwitcher.astro";
import ProductItemCard from "../ProductItem/ProductItemCard/ProductItemCard.astro";
import SectionTitle from "../SectionTitle/SectionTitle.astro";

interface Props {
    title: string;
    products: any[];
    categories: any[];
}

const { title, products,categories } = Astro.props;
---

<section class="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-9 col-6">
                <SectionTitle text={title} />
            </div>
            <div class="col-lg-6 col-sm-3 col-6 d-flex justify-content-lg-start justify-content-end align-items-center">
                <CategoriesSwitcher categories={categories}/>
            </div>
            <!-- <div class="row mt-4"> -->
            <div class='products__container'>
                {products.map((item) => <ProductItemCard product={item}/>)}
            </div>
        </div>
    </div>
</section>
